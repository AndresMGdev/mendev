---
interface Props {
  date: string;
  title: string;
  company: string;
  description: string;
  link?: string;
}
const { date, title, company, description, link } = Astro.props;
---

<time class="mb-1 text-sm font-normal leading-none text-sky-200/90">{date}</time
>
<div class="flex flex-col">
  <h3 class="text-lg font-semibold text-yellow-200 mt-2">
    {title} - {company}
  </h3>
  
</div>
<p class="mb-4 text-base font-normal text-gray-200 text-pretty">
  {description}
</p>

{
  link && (
    <a
      href={link}
      class="inline-flex items-center font-medium text-white-900 bg-white rounded-full border border-white/10  gap-x-2 py-1 px-2 md:py-2 md:px-4 bg-white/5 hover:bg-white/30 text-xs md:text-base hover:scale-110 transition"
    >
      Learn more...{" "}
      <svg
        class="w-3 h-3 ms-2 rtl:rotate-180"
        aria-hidden="true"
        xmlns="http://www.w3.org/2000/svg"
        fill="none"
        viewBox="0 0 14 10"
      >
        <path
          stroke="currentColor"
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d="M1 5h12m0 0L9 1m4 4L9 9"
        />
      </svg>
    </a>
  )
}
