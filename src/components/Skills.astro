---
import { TAGS } from "../data/tags";
---

<div class="grid grid-cols-2 sm:grid-cols-4 md:grid-cols-4 lg:grid-cols-6 gap-4">
  {
    Object.values(TAGS)
      .filter((tag) => tag.name !== "Laravel")  // ðŸ”¥ Omitir Laravel
      .map((tag) => (
      <div class={`flex flex-col items-center text-center p-4 rounded-lg border-transparent shadow-lg bg-gradient-to-t ${tag.class}`}>
  <tag.icon class="w-12 h-12 mb-2" />
  <p class="text-base font-semibold text-[#1c0b2b]/90 dark:text-gray-200">
    {tag.name}
  </p>
</div>
      ))
  }
</div>
