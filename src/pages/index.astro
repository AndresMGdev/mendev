---
import Layout from "../layouts/Layout.astro";
import Badge from "../components/Badge.astro";
import SocialStack from "../components/SocialStack.astro";
import Experience from "../components/Experience.astro";

import LinkedInIcon from "../components/icons/LinkedIn.astro";
import GithubIcon from "../components/icons/Github.astro";
import GmailIcon from "../components/icons/Gmail.astro";
---

<Layout title="cmendoza Portfolio - Backend Developer" description="Backend Developer and Systems Engineer. Originally from Bogota, Colombia. I specialize in creating Web Solutions.">
  <main>
    <section class="w-full lg:w-[740px] mx-auto py-32">
      <img
        class="rounded-full size-12 mb-4"
        src="https://static.vecteezy.com/system/resources/thumbnails/005/545/335/small/user-sign-icon-person-symbol-human-avatar-isolated-on-white-backogrund-vector.jpg"
        alt="cmendozadev icon"
      />
      <h1 class="text-white text-5xl font-bold flex flex-row gap-x-4 pb-10">
        Hey, I'm cmendoza
        <div class="flex justify-center items-center">
          <Badge>Available to work</Badge>
        </div>
      </h1>
      <h2 class="text-2xl opacity-80 text-wrap">
        <span>+1 year of experience.</span>
        <span class="text-violet-200/90"
          >Backend Developer and Systems Engineer.
        </span>
        <span class="text-red-200/90">Originally from Bogota, Colombia.</span>
        <span class="opacity-75">I specialize in creating Web Solutions.</span>
      </h2>
      <nav class="flex gap-x-4 mt-6">
        <SocialStack
          href="https://www.linkedin.com/in/carlos-andr%C3%A9s-mendoza-g%C3%B3mez-149594204/"
        >
          <LinkedInIcon class="size-6" /> LinkedIn
        </SocialStack>
        <SocialStack href="https://github.com/AndresMGdev">
          <GithubIcon class="size-6" /> Github
        </SocialStack>
		<SocialStack>
			<GmailIcon class="size-6" /> cmendoza022002@gmail.com
		  </SocialStack>
      </nav>
    </section>
	<!-- <Experience /> -->
  </main>
</Layout>
